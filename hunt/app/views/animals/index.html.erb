 <div class="container">
   <div class="row">
     <div class="col">
       <%= link_to 'New Animal', new_animal_path, class: 'btn btn-dark' %>
       <table class="table table-hover mt-2">
          <thead class="thead-dark">
            <tr>
              <th scope="col">Name</th>
              <th scope="col">State</th>
              <th scope="col">Category</th>
            </tr>
          </thead>
          <tbody>


            <% @animals.each do |animal| %>

              <tr onclick="displayAnimal('<% link_to %>', '<%=animal_path(animal)%>')">
                <td><%=animal.name%></td>
                <td><%=animal.state%></td>
                <td><%=animal.category%></td>
              </tr>
              
            <% end %>
            <script>
              function displayAnimal(path, linkToAnimal) {
                window.location.replace(path+linkToAnimal);
              }
            </script>
          </tbody>
        </table>
      </div>
    </div>
  </div>
