<div class="container">
  <div class="row">
    <div class="col">
      <%= link_to 'View All Animals', animals_path, class: 'btn btn-dark' %>
      <div class="card mt-2">
        <div class="card-header"><h5><strong><%=@animal.name%></strong></h5></div>
        <div class="card-body">



          <p class="card-text">State: <%=@animal.state%></p>
          <p class="card-text">Category: <%=@animal.category%></p>
          <p class="card-text">Season:
          <%= if @animal.season_open.present? && @animal.season_close.present?
            @animal.season_open.strftime('%b %d %Y') + " - " + @animal.season_close.strftime('%b %d %Y')
            end %>
          <p class="card-text">Description: <%= @animal.description%><p>

        </p>



          <div class="d-flex justify-content-end">
            <%= link_to 'Edit', edit_animal_path, class: 'btn btn-dark mr-2' %>
            <%= link_to 'Delete', animal_path(@animal), data: { confirm: 'Are you sure you want to delete this animal?' }, method: :delete, class: 'btn btn-danger' %>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>
